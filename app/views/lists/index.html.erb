<div class="banner-lists flex-column">
  <h2>The best movie library in cyberspace</h2>
  <%= link_to "Create a new category", new_list_path, class: "btn btn-success mt-3" %>
</div>
<div class="container">
  <div class="movie-categories">
      <h1 style="margin: 10px 20px;">See all categories:</h1>
      <div class="cards-box d-flex">
        <%@lists.each do |list| %>
        <div class="card rounded shadow">
          <h5 style="font-weight: bold;"><%= link_to list.name, list_path(list), class: "list-title" %></h5>
        </div>
        <% end %>
      </div>
  </div>
</div>



